    <PackageId>Enigmatry.Entry.EntityFramework</PackageId>
    <Product>Enigmatry.Entry.EntityFramework</Product>
    <Description>Building Block for adding EntityFramework related infrastructure to an Entry based project</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Azure.Identity" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
